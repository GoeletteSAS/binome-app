<div class="modal fade"
     id="newChatroomModal"
     tabindex="-1"
     aria-labelledby="newChatroomModalLabel"
     aria-hidden="true">
     <div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
  <h5 class="modal-title" id="newChatroomModalLabel">Message</h5>
  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<%= form_with(
      model: Chatroom.new,
      url: chatrooms_path,
      local: false,
      data: { controller: "chatroom" }, data: { turbo: false },
      method: :post,
    ) do |f| %>
  <div class="modal-body">
    <div class="mb-3">
      <%= f.text_area :message,
          class: "form-control",
          placeholder: "Ã©crivez votre message ici...",
          rows: 3,
          required: true
      %>
    </div>
    <%= f.hidden_field :recipient_id, value: @user.id if @user %>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    <%= f.submit "Envoyer", class: "btn btn-primary" %>
  </div>
<% end %>

  </div>
</div>

</div>
