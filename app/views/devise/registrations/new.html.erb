<div class="container-questions">

  <h2>S'inscrire</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  label: "Prénom" %>
      <%= f.input :last_name,
                  required: true,
                  label: "Nom de famille" %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  label: "Mot de passe",
                  hint: ("#{@minimum_password_length} nombres de caractères minimum" if @minimum_password_length),
                  input_html: { autocomplete: "nouveau mot de passe" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  label: "Confirmation de mot de passe",
                  input_html: { autocomplete: "nouveau mot de passe" } %>
      <%= f.input :photo,
                  as: :file %>
    </div>

    <div class="form-actions btn">
      <%= f.button :submit, "S'incrire", class: "devise-btn" %>
    </div>

  <% end %>

  <p>Vous avez déjà un compte ?<%= render "devise/shared/links" %></p>

</div>
