<div class="container">
  <h1>Fill your experiences</h1>

  <%= simple_form_for @experience do |f| %>
    <%= f.input :start_date,
                label: 'Start Date',
                input_html: {
                  class: 'form-control datepicker',
                  data: { controller: "flatpickr" }
                } %>

    <%= f.input :end_date,
                label: 'End Date',
                input_html: {
                  class: 'form-control datepicker',
                  data: { controller: "flatpickr" }
                } %>

    <%= f.input :is_current, label: 'Current Position?', input_html: { class: 'form-check-input' } %>

    <%= f.input :line_of_work, label: 'Line of Work', input_html: { class: 'form-control' } %>

    <%= f.input :field, label: 'Field/Position', input_html: { class: 'form-control' } %>

    <%= f.input :address, label: 'Address', input_html: { class: 'form-control' } %>

    <div class="mt-3">
      <%= f.button :submit, 'Create Experience', class: 'btn btn-primary' %>
      <%= link_to 'Back', experiences_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
