<div><%= render "tabs" %></div>

<div class="row">
  <div class="col-3">
    <% @searches.each do |search| %>
      <%= link_to search_path(search), data: { turbo_frame: "preview" } do %>
        <% if search.is_offering? %>
          <div class="border p-3">
            Partager mon poste
            <%= search.line_of_work %>
            <%= search.address %>
          </div>
        <% else %>
          <div class="border profile-card">
            <p style="text-decoration: none;">
            Rejoindre un poste
            <%= search.line_of_work %>
            <%= search.address %>
            </p>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="col-9">
    <%= turbo_frame_tag "preview" %>
  </div>
</div>

<% if current_user.searches.nil?%>
  <div class="cards">
    <h1>Aucun recherche ici</h1>
  </div>
<%else%>
  <%#= render "cards_jobsearch" %>
<% end %>
