<div><%= render "tabs" %></div>

<div class="row">
  <div class="col-5">
    <% @searches.each do |search| %>
      <%= link_to search_path(search), data: { turbo_frame: "preview" } do %>
        <% if search.is_offering? %>
          <div class="border p-3">
            Partager mon poste
            <div><%= search.line_of_work.capitalize %></div>
            <div><%= search.address %></div>
          </div>
        <% else %>
          <div class="d-flex border profile-card">
            <div class="col-8">
              Rejoindre un poste
              <div class="col-4"><%= search.line_of_work.capitalize %></div>
              <div class="col-4"><%= search.address %></div>
            </div>
            <p style="margin:0px; font-size: 30px;" class="d-flex justify-content-center align-items-center col-2">40%</p>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="col-7">
    <%= turbo_frame_tag "preview" %>
  </div>
</div>

<% if current_user.searches.nil?%>
  <div class="cards">
    <h1>Aucun recherche ici</h1>
  </div>
<%else%>
  <%#= render "cards_jobsearch" %>
<% end %>
