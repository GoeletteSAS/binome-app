<div>

    <%# t.integer "user_id", null: false
    t.integer "experience_id", null: false
    t.string "line_of_work"
    t.string "field"
    t.string "address"
    t.boolean "is_offering" %>


  <%= simple_form_for @search do |f| %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :line_of_work, label: 'Quel est votre ligne de métier ?', input_html: { class: 'form-control' } %>
      </div>
      <div class="col-md-6">
        <%= f.input :photos, as: :file, label: 'Upload Photos', input_html: { multiple: true, class: 'form-control' } %>
      </div>
    </div>

    <%= f.input :description, label: 'Description', input_html: { class: 'form-control', rows: 4 } %>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :location, label: 'Location', input_html: { class: 'form-control' } %>
      </div>
      <div class="col-md-6">
        <%= f.input :price, label: 'Price (€)', input_html: { class: 'form-control' } %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= f.input :min_number_of_players, label: 'Min Players', input_html: { class: 'form-control' } %>
      </div>
      <div class="col-md-6">
        <%= f.input :max_number_of_players, label: 'Max Players', input_html: { class: 'form-control' } %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <%= f.input :category, label: 'Category', input_html: { class: 'form-control' } %>
      </div>
      <div class="col-md-6">
        <%= f.input :playing_time, label: 'Playing Time (mins)', input_html: { class: 'form-control' } %>
      </div>
    </div>

    <div class="text-center mt-4">
      <%= f.submit 'Save Game', id: 'bright', class: 'btn btn-primary btn-lg px-4' %>
    </div>
  <% end %>
</div>
